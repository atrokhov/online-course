<h1>Users</h1>

<table>
  <thead>
  	<tr>
  		<th>#</th>
      <th>First</th>
      <th>Last</th>
      <th>Email</th>
      <th>Subscription</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
	  <% @users.each do |user| %>
	  	<tr>
	  		<td><%= user.id %></td>
	  		<td><%= user.first_name %></td>
	  		<td><%= user.last_name %></td>
	  		<td><%= user.email %></td>
	  		<% if user.is_client? %>
	  			<td><%= user.has_subscription? %></td>
	  		<% else %>
	  			<td>Is <%= user.rights %></td>
	  		<% end %>
	  		<td><%= link_to 'Show', user %></td>
	  	</tr>
	  <% end %>
	</tbody>
</table>