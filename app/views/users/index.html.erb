<h1>Users</h1>

<table>
  <thead>
  	<tr>
  		<th>#</th>
      <th>First</th>
      <th>Last</th>
      <th>Email</th>
      <th>Subscription?</th>
      <th>Blocked?</th>
      <th colspan="3">Actions</th>
      <th>Destroy</th>
    </tr>
  </thead>

  <tbody>
	  <% @users.each do |user| %>
	  	<tr class="line">
	  		<td><%= user.id %></td>
	  		<td><%= user.first_name %></td>
	  		<td><%= user.last_name %></td>
	  		<td><%= user.email %></td>
	  		<% if user.client? %>
	  			<td class="subscription <%= user.has_subscription? %>"><%= user.has_subscription? %></td>
	  		<% else %>
	  			<td class="role">Is <%= user.rights %></td>
	  		<% end %>
	  		<td class="blocked <%= user.blocked %>"><%= user.blocked %></td>
	  		<td><%= link_to 'Show', user %></td>
	  		<td><%= link_to 'Edit', edit_user_path(user) %></td>
	  		<% if !user.blocked %>
	  			<td><%= link_to 'Block', block_user_path(user), method: :patch, data: { confirm: 'Are you sure you want to block user?' }%></td>
	  		<% else %>
	  			<td><%= link_to 'Unblock', unblock_user_path(user), method: :patch, data: { confirm: 'Are you sure you want to unblock user?' } %></td>
	  		<% end %>
	  		<td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	  	</tr>
	  <% end %>
	</tbody>
</table>