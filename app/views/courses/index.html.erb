<h1>Courses</h1>
<% @courses.each do |course| %>
<div>
	<p><%= course.name %></p>
	<%= link_to 'Show', course %>
	<% if user_signed_in? and current_user.is_superuser? %>
	    | <%= link_to 'Edit', edit_course_path(course) %> |
	    <%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %>
	<% end %>
</div>
<% end %>

<% if user_signed_in? and current_user.is_superuser? %>
	<p><%= link_to 'New course', new_course_path %></p>
<% end %>